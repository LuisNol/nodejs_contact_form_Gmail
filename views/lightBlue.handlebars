<!DOCTYPE html>
<html>
    <head>

        <!-- Meta Tag -->
        <meta charset="utf-8">
        <meta name="description" content="Contact Form">
        <meta name="keywords" content="Nodejs,UIkit,Nodemailer,Expressjs">
        <meta name="author" content="Author">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        <!-- Title -->
        <title>Contact Us</title>

        <!-- Font -->
        <link href="https://fonts.googleapis.com/css?family=Raleway:400,500" rel="stylesheet">

        <!-- CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="/public/css/lightBlue.css">
        <link rel="stylesheet" href="/public/css/fontawesome.min.css">

    </head>
    <body>

        <!-- Container -->
        <div class="container">
            <div class="row justify-content-center">

                <!-- Left Column -->
                <div class="col-lg-6 left-column">

                    <!-- Navbar -->
                    

                    <!-- Form -->
                    <form class="contact-form" method="POST" action="send" enctype="multipart/form-data">
                        {{{msg}}}

                            <!-- Name -->
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label">Nombres y apellidos</label>
                                <div class="col-lg-8">
                                    <input type="text" name="name" class="form-control form-control-sm" required>
                                </div>
                            </div>

                            <!-- Phone -->
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label">Numero de celular</label>
                                <div class="col-lg-8">
                                    <input type="text" name="phone" class="form-control form-control-sm" required>
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label">Correo electrónico</label>
                                <div class="col-lg-8">
                                    <input type="email" name="email" class="form-control form-control-sm" required>
                                </div>
                            </div>
                            
                            <!-- Product Category -->
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label">Categoría de producto (Tecnología, cosmetología, electrodomésticos, etc)</label>
                                <div class="col-lg-8">
                                    <input type="text" name="product_category" class="form-control form-control-sm" required>
                                </div>
                            </div>

                            <!-- Product Reference -->
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label">Enlace o referencia del producto</label>
                                <div class="col-lg-8">
                                    <input type="text" name="product_reference" class="form-control form-control-sm" required>
                                </div>
                            </div>
                            
                        
                            <!-- Photo Reference -->
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label">Foto del producto (opcional)</label>
                                <div class="col-lg-8">
                                    <input type="file" name="photo_references" class="form-control form-control-sm" accept="image/*">
                                </div>
                            </div>

                                                 

                            <!-- Quantity -->
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label">Cantidad</label>
                                <div class="col-lg-8">
                                    <input type="number" name="quantity" class="form-control form-control-sm" required>
                                </div>
                            </div>

                            <!-- Has Supplier -->
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label">¿Cuentas con proveedor?</label>
                                <div class="col-lg-8">
                                    <select class="form-control form-control-sm" name="has_supplier" required>
                                        <option value="Yes">Yes</option>
                                        <option value="No">No</option>
                                    </select>
                                </div>
                            </div>

                            <!-- City -->
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label">Ciudad</label>
                                <div class="col-lg-8">
                                    <input type="text" name="city" class="form-control form-control-sm" required>
                                </div>
                            </div>

                            <!-- Message -->
                            <div class="form-group row">
                                <label class="col-lg-4 col-form-label">Mensaje</label>
                                <div class="col-lg-8">
                                    <textarea class="form-control form-control-sm" name="message" rows="5"></textarea>
                                </div>
                            </div>
                    
                            <!-- Submit Button -->
                            <div class="text-right">
                                <input class="btn btn-submit" type="submit" value="Enviar formulario">
                            </div>

                    </form>
                </div>
                <!-- End Left Column -->
                
                <!-- Right Column -->
             

            </div>
        </div>
        
        <!-- JavaScript -->
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    </body>
</html>
